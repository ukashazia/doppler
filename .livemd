```elixir
import Ecto.Query

query =
  from(
    p in Doppler.Schemas.ServerPosts,
    join: u in assoc(p, :server_users),
    join: s in assoc(p, :server),
    where: u.username == "one" and s.name == "one"
  )

Repo.all(query)
